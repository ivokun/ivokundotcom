{
  "name": "@ivokundotcom/cms",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "ivokun CMS - Custom headless CMS built with Effect TS, Kysely, and Bun",
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "bun run scripts/build-binary.ts",
    "build:quick": "bun build src/server.ts --compile --outfile dist/cms --external @effect/cluster --external sharp",
    "build:spa": "vite build --config vite.config.ts",
    "build:linux": "bun run scripts/build-binary.ts linux-x64",
    "build:all": "bun run scripts/build-binary.ts --all",
    "start": "./dist/cms",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "db:new": "dbmate -d ./db/migrations new",
    "db:up": "dbmate -d ./db/migrations up",
    "db:down": "dbmate -d ./db/migrations down",
    "db:status": "dbmate -d ./db/migrations status",
    "db:dump": "dbmate -d ./db/migrations dump",
    "seed:admin": "bun run scripts/seed-admin.ts",
    "migrate:strapi": "bun run scripts/migrate-strapi.ts",
    "test": "bun test"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.962.0",
    "@effect/cluster": "0.55.0",
    "@effect/platform": "0.93.6",
    "@effect/platform-bun": "0.86.0",
    "@node-rs/argon2": "2.0.2",
    "@paralleldrive/cuid2": "2.2.2",
    "effect": "3.19.8",
    "kysely": "0.27.4",
    "pg": "8.13.1",
    "sharp": "^0.34.5",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@solidjs/router": "0.15.3",
    "@tiptap/core": "^3.15.1",
    "@tiptap/extension-image": "^3.15.1",
    "@tiptap/extension-link": "^3.15.1",
    "@tiptap/extension-placeholder": "^3.15.1",
    "@tiptap/starter-kit": "^3.15.1",
    "@types/bun": "1.1.14",
    "@types/pg": "8.11.10",
    "@typescript-eslint/eslint-plugin": "8.18.2",
    "@typescript-eslint/parser": "8.18.2",
    "autoprefixer": "10.4.20",
    "eslint": "9.17.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "postcss": "8.4.49",
    "prettier": "3.4.2",
    "solid-js": "1.9.4",
    "solid-tiptap": "0.8.0",
    "tailwindcss": "3.4.17",
    "typescript": "5.7.2",
    "vite": "6.0.7",
    "vite-plugin-solid": "2.11.0"
  },
  "engines": {
    "node": ">=22.17.0",
    "bun": ">=1.1.38"
  }
}
