---
import { GalleryItem } from '@api/gallery';

export interface Props {
  items: GalleryItem[];
  category?: string;
}

const { items, category = 'all' } = Astro.props;
const filteredItems = category === 'all' ? items : items.filter(item => item.category === category);
---

<div class="gallery-grid">
  {filteredItems.map((item) => (
    <div class="gallery-item" data-category={item.category}>
      <a href={`/gallery/${item.slug}`} class="gallery-link">
        <div class="gallery-image">
        <img src={filteredItems.length < 6 ? item.formats.medium : item.formats.thumbnail} alt={item.title} loading="lazy" />
          <div class="gallery-overlay">
            <div class="gallery-info">
              <h3 class="gallery-title">{item.title}</h3>
              <span class="gallery-category">{item.category.toUpperCase()}</span>
              <span class="view-button">VIEW</span>
            </div>
          </div>
        </div>
      </a>
    </div>
  ))}
</div>

<style>
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .gallery-item {
    position: relative;
    aspect-ratio: 4/5;
    border: 4px solid var(--color-black);
    overflow: hidden;
    background: var(--color-white);
    transition: all 0.3s ease;
  }

  .gallery-item:hover {
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 var(--color-blue);
  }

  .gallery-image {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .gallery-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-image img {
    transform: scale(1.05);
  }

  .gallery-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
    padding: 2rem 1rem 1rem;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .gallery-item:hover .gallery-overlay {
    transform: translateY(0);
  }

  .gallery-info {
    color: var(--color-white);
  }

  .gallery-title {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    text-transform: none;
  }

  .gallery-category {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-blue);
    font-weight: 700;
    letter-spacing: 0.1em;
    margin-bottom: 0.75rem;
    display: block;
  }
  
  .gallery-link {
    display: block;
    width: 100%;
    height: 100%;
    border: none;
    text-decoration: none;
    color: inherit;
  }
  
  .view-button {
    display: inline-block;
    background: var(--color-blue);
    color: var(--color-white);
    font-family: var(--font-sans);
    font-weight: 700;
    font-size: 0.8rem;
    padding: 0.5rem 1rem;
    margin-top: 0.5rem;
    border: 2px solid var(--color-blue);
    transition: all 0.2s ease;
  }
  
  .gallery-item:hover .view-button {
    background: var(--color-white);
    color: var(--color-blue);
  }

  @media (max-width: 768px) {
    .gallery-grid {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
    }

    .gallery-item {
      aspect-ratio: 1/1;
    }

    .gallery-overlay {
      transform: translateY(0);
      background: rgba(0, 0, 0, 0.7);
      padding: 1rem;
    }
  }
</style>
