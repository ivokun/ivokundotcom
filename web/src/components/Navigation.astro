---
const currentPath = Astro.url.pathname;
---

<nav class="sidebar-nav" id="sidebar-nav">
  <div class="sidebar-content">
    <a href="/" class="logo">
      <span class="logo-text">IVOKUN</span>
      <span class="logo-subtext">BLOG</span>
    </a>
    
    <div class="nav-links">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>
        <span class="nav-text">HOME</span>
      </a>
      <a href="/gallery" class={currentPath === '/gallery' ? 'active' : ''}>
        <span class="nav-text">GALLERY</span>
      </a>
      <a href="/articles" class={currentPath === '/articles' ? 'active' : ''}>
        <span class="nav-text">ARTICLES</span>
      </a>
      <a href="/about" class={currentPath === '/about' ? 'active' : ''}>
        <span class="nav-text">ABOUT</span>
      </a>
    </div>

    <div class="sidebar-footer">
      <div class="social-links">
        <a href="https://instagram.com/ivokun" class="social-link">IG</a>
        <a href="https://github.com/ivokun" class="social-link">GH</a>
        <a href="https://x.com/ivokun" class="social-link" target="_blank">X</a>
      </div>
    </div>
  </div>

  <button class="sidebar-toggle" id="sidebar-toggle">
    <span></span>
    <span></span>
    <span></span>
  </button>
</nav>

<div class="sidebar-overlay" id="sidebar-overlay"></div>

<style>
  .sidebar-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 280px;
    height: 100vh;
    background: transparent;
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .sidebar-nav.open {
    transform: translateX(0);
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 2rem 1.5rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    border: none;
    padding: 1rem;
    margin-bottom: 2rem;
    align-self: flex-start;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    transition: all 0.2s ease;
  }

  .logo:hover {
    background: var(--color-blue);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .logo-text {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 900;
    line-height: 0.8;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: var(--color-black);
  }

  .logo:hover .logo-text {
    color: var(--color-white);
  }

  .logo-subtext {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 400;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .logo:hover .logo-subtext {
    color: var(--color-white);
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .nav-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 4px solid var(--color-black);
    padding: 1.5rem 1rem;
    background: var(--color-white);
    color: var(--color-black);
    transition: all 0.2s ease;
    text-decoration: none;
    min-height: 80px;
  }

  .nav-links a:hover {
    background: var(--color-black);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-blue);
  }

  .nav-links a.active {
    background: var(--color-blue);
    color: var(--color-white);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .nav-text {
    font-size: 1.1rem;
    font-weight: 900;
  }

  .sidebar-footer {
    margin-top: auto;
    padding-top: 2rem;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: var(--color-white);
    border: 3px solid var(--color-black);
    color: var(--color-black);
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--color-blue);
    color: var(--color-white);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 3px 3px 0 var(--color-black);
  }

  .sidebar-toggle {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    cursor: pointer;
    padding: 0.75rem;
    gap: 0.25rem;
    transition: all 0.3s ease;
  }

  .sidebar-toggle:hover {
    background: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .sidebar-toggle span {
    display: block;
    width: 1.5rem;
    height: 3px;
    background: var(--color-black);
    transition: all 0.3s ease;
  }

  .sidebar-toggle:hover span {
    background: var(--color-white);
  }

  .sidebar-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(0.4rem, 0.4rem);
  }

  .sidebar-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .sidebar-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(0.4rem, -0.4rem);
  }

  .sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Desktop: Always show sidebar */
  @media (min-width: 1024px) {
    .sidebar-nav {
      transform: translateX(0);
      position: fixed;
    }

    .sidebar-toggle {
      display: none;
    }

    .sidebar-overlay {
      display: none;
    }
  }

  /* Tablet and Mobile: Toggle sidebar */
  @media (max-width: 1023px) {
    .sidebar-nav {
      width: 260px;
    }

    .sidebar-toggle {
      display: flex;
    }
  }

  @media (max-width: 480px) {
    .sidebar-nav {
      width: 240px;
    }

    .sidebar-content {
      padding: 1.5rem 1rem;
    }

    .logo-text {
      font-size: 1.25rem;
    }

    .nav-links a {
      font-size: 1rem;
      padding: 1.25rem 0.75rem;
      min-height: 70px;
    }

    .nav-text {
      font-size: 1rem;
    }

    .social-link {
      width: 45px;
      height: 45px;
      font-size: 0.8rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebar-nav');
    const toggle = document.getElementById('sidebar-toggle');
    const overlay = document.getElementById('sidebar-overlay');

    if (toggle && sidebar && overlay) {
      toggle.addEventListener('click', () => {
        const isOpen = sidebar.classList.contains('open');
        
        if (isOpen) {
          sidebar.classList.remove('open');
          toggle.classList.remove('active');
          overlay.classList.remove('active');
        } else {
          sidebar.classList.add('open');
          toggle.classList.add('active');
          overlay.classList.add('active');
        }
      });

      // Close sidebar when clicking overlay
      overlay.addEventListener('click', () => {
        sidebar.classList.remove('open');
        toggle.classList.remove('active');
        overlay.classList.remove('active');
      });

      // Close sidebar when clicking on a link (mobile)
      const navLinks = sidebar.querySelectorAll('.nav-links a');
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) {
            sidebar.classList.remove('open');
            toggle.classList.remove('active');
            overlay.classList.remove('active');
          }
        });
      });
    }
  });
</script>
