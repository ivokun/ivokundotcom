---
const currentPath = Astro.url.pathname;
---

<nav class="sidebar-nav" id="sidebar-nav">
  <div class="sidebar-content">
    <a href="/" class="logo">
      <span class="logo-text">IVOKUN</span>
      <span class="logo-subtext">BLOG</span>
    </a>
    
    <div class="nav-links">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>
        <span class="nav-text">HOME</span>
      </a>
      <a href="/gallery" class={currentPath === '/gallery' ? 'active' : ''}>
        <span class="nav-text">GALLERY</span>
      </a>
      <a href="/articles" class={currentPath === '/articles' ? 'active' : ''}>
        <span class="nav-text">ARTICLES</span>
      </a>
      <a href="/about" class={currentPath === '/about' ? 'active' : ''}>
        <span class="nav-text">ABOUT</span>
      </a>
    </div>

    <div class="sidebar-footer">
      <div class="social-links">
        <a href="https://instagram.com/ivokun" class="social-link">IG</a>
        <a href="https://github.com/ivokun" class="social-link">GH</a>
        <a href="https://x.com/ivokun" class="social-link" target="_blank">X</a>
      </div>
    </div>
  </div>

  <button class="sidebar-toggle" id="sidebar-toggle">
    <span></span>
    <span></span>
    <span></span>
  </button>
</nav>

<!-- Mobile Floating Navigation -->
<div class="mobile-nav-container" id="mobile-nav-container">
  <div class="mobile-nav-overlay" id="mobile-nav-overlay"></div>
  
  <div class="mobile-nav-menu" id="mobile-nav-menu">
    <div class="mobile-nav-header">
      <div class="mobile-logo">
        <span class="logo-text">BRUTALIST</span>
        <span class="logo-subtext">BLOG</span>
      </div>
      <button class="mobile-nav-close" id="mobile-nav-close">
        <span></span>
        <span></span>
      </button>
    </div>
    
    <div class="mobile-nav-links">
      <a href="/" class={currentPath === '/' ? 'active' : ''}>
        <span class="nav-text">HOME</span>
      </a>
      <a href="/gallery" class={currentPath === '/gallery' ? 'active' : ''}>
        <span class="nav-text">GALLERY</span>
      </a>
      <a href="/articles" class={currentPath === '/articles' ? 'active' : ''}>
        <span class="nav-text">ARTICLES</span>
      </a>
      <a href="/about" class={currentPath === '/about' ? 'active' : ''}>
        <span class="nav-text">ABOUT</span>
      </a>
    </div>

    <div class="mobile-nav-footer">
      <div class="social-links">
        <a href="#" class="social-link">IG</a>
        <a href="#" class="social-link">GH</a>
        <a href="#" class="social-link">TW</a>
      </div>
    </div>
  </div>

  <button class="mobile-nav-toggle" id="mobile-nav-toggle">
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
    <span class="hamburger-line"></span>
  </button>
</div>

<div class="sidebar-overlay" id="sidebar-overlay"></div>

<style>
  .sidebar-nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 280px;
    height: 100vh;
    background: transparent;
    z-index: 1000;
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }

  .sidebar-nav.open {
    transform: translateX(0);
  }

  .sidebar-content {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 2rem 1.5rem;
  }

  .logo {
    display: flex;
    flex-direction: column;
    border: none;
    padding: 1rem;
    margin-bottom: 2rem;
    align-self: flex-start;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    transition: all 0.2s ease;
  }

  .logo:hover {
    background: var(--color-blue);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .logo-text {
    font-family: var(--font-sans);
    font-size: 1.5rem;
    font-weight: 900;
    line-height: 0.8;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: var(--color-black);
  }

  .logo:hover .logo-text {
    color: var(--color-white);
  }

  .logo-subtext {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 400;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .logo:hover .logo-subtext {
    color: var(--color-white);
  }

  .nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .nav-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 1.25rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 4px solid var(--color-black);
    padding: 1.5rem 1rem;
    background: var(--color-white);
    color: var(--color-black);
    transition: all 0.2s ease;
    text-decoration: none;
    min-height: 80px;
  }

  .nav-links a:hover {
    background: var(--color-black);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-blue);
  }

  .nav-links a.active {
    background: var(--color-blue);
    color: var(--color-white);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .nav-text {
    font-size: 1.1rem;
    font-weight: 900;
  }

  .sidebar-footer {
    margin-top: auto;
    padding-top: 2rem;
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
    justify-content: center;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50px;
    height: 50px;
    background: var(--color-white);
    border: 3px solid var(--color-black);
    color: var(--color-black);
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 0.9rem;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .social-link:hover {
    background: var(--color-blue);
    color: var(--color-white);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 3px 3px 0 var(--color-black);
  }

  .sidebar-toggle {
    position: fixed;
    top: 1.5rem;
    left: 1.5rem;
    z-index: 1001;
    display: flex;
    flex-direction: column;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    cursor: pointer;
    padding: 0.75rem;
    gap: 0.25rem;
    transition: all 0.3s ease;
  }

  .sidebar-toggle:hover {
    background: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .sidebar-toggle span {
    display: block;
    width: 1.5rem;
    height: 3px;
    background: var(--color-black);
    transition: all 0.3s ease;
  }

  .sidebar-toggle:hover span {
    background: var(--color-white);
  }

  .sidebar-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translate(0.4rem, 0.4rem);
  }

  .sidebar-toggle.active span:nth-child(2) {
    opacity: 0;
  }

  .sidebar-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translate(0.4rem, -0.4rem);
  }

  .sidebar-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .sidebar-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  /* Mobile Floating Navigation */
  .mobile-nav-container {
    display: none;
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2000;
  }

  .mobile-nav-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .mobile-nav-overlay.active {
    opacity: 1;
    visibility: visible;
  }

  .mobile-nav-menu {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--color-white);
    border-top: 4px solid var(--color-black);
    border-left: 4px solid var(--color-black);
    border-right: 4px solid var(--color-black);
    border-radius: 20px 20px 0 0;
    padding: 2rem 1.5rem 6rem;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    max-height: 80vh;
    overflow-y: auto;
  }

  .mobile-nav-menu.active {
    transform: translateY(0);
  }

  .mobile-nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 3px solid var(--color-black);
  }

  .mobile-logo {
    display: flex;
    flex-direction: column;
  }

  .mobile-logo .logo-text {
    font-family: var(--font-sans);
    font-size: 1.25rem;
    font-weight: 900;
    line-height: 0.8;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    color: var(--color-black);
  }

  .mobile-logo .logo-subtext {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: 400;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .mobile-nav-close {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: var(--color-black);
    border: none;
    cursor: pointer;
    border-radius: 50%;
    position: relative;
    transition: all 0.2s ease;
  }

  .mobile-nav-close:hover {
    background: var(--color-blue);
    transform: scale(1.1);
  }

  .mobile-nav-close span {
    position: absolute;
    width: 20px;
    height: 2px;
    background: var(--color-white);
    transition: all 0.2s ease;
  }

  .mobile-nav-close span:nth-child(1) {
    transform: rotate(45deg);
  }

  .mobile-nav-close span:nth-child(2) {
    transform: rotate(-45deg);
  }

  .mobile-nav-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .mobile-nav-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 1.1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border: 3px solid var(--color-black);
    padding: 1.25rem 1rem;
    background: var(--color-white);
    color: var(--color-black);
    transition: all 0.2s ease;
    text-decoration: none;
    border-radius: 8px;
  }

  .mobile-nav-links a:hover {
    background: var(--color-black);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-blue);
  }

  .mobile-nav-links a.active {
    background: var(--color-blue);
    color: var(--color-white);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .mobile-nav-footer {
    border-top: 3px solid var(--color-black);
    padding-top: 1.5rem;
  }

  .mobile-nav-footer .social-links {
    justify-content: center;
    gap: 1rem;
  }

  .mobile-nav-footer .social-link {
    width: 45px;
    height: 45px;
    border-radius: 8px;
    font-size: 0.8rem;
  }

  .mobile-nav-toggle {
    position: fixed;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 60px;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 4px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .mobile-nav-toggle:hover {
    background: var(--color-blue);
    transform: translateX(-50%) translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
  }

  .mobile-nav-toggle.active {
    background: var(--color-black);
  }

  .hamburger-line {
    width: 20px;
    height: 2px;
    background: var(--color-black);
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .mobile-nav-toggle:hover .hamburger-line {
    background: var(--color-white);
  }

  .mobile-nav-toggle.active .hamburger-line {
    background: var(--color-white);
  }

  .mobile-nav-toggle.active .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translate(5px, 5px);
  }

  .mobile-nav-toggle.active .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  .mobile-nav-toggle.active .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translate(7px, -6px);
  }

  /* Desktop: Always show sidebar, hide mobile nav */
  @media (min-width: 1024px) {
    .sidebar-nav {
      transform: translateX(0);
      position: fixed;
    }

    .sidebar-toggle {
      display: none;
    }

    .sidebar-overlay {
      display: none;
    }

    .mobile-nav-container {
      display: none !important;
    }
  }

  /* Tablet: Show sidebar toggle, hide mobile nav */
  @media (min-width: 769px) and (max-width: 1023px) {
    .sidebar-nav {
      width: 260px;
    }

    .sidebar-toggle {
      display: flex;
    }

    .mobile-nav-container {
      display: none !important;
    }
  }

  /* Mobile: Hide sidebar, show mobile nav */
  @media (max-width: 768px) {
    .sidebar-nav {
      display: none !important;
    }

    .sidebar-toggle {
      display: none !important;
    }

    .sidebar-overlay {
      display: none !important;
    }

    .mobile-nav-container {
      display: block !important;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Desktop/Tablet sidebar functionality
    const sidebar = document.getElementById('sidebar-nav');
    const toggle = document.getElementById('sidebar-toggle');
    const overlay = document.getElementById('sidebar-overlay');

    if (toggle && sidebar && overlay) {
      toggle.addEventListener('click', () => {
        const isOpen = sidebar.classList.contains('open');
        
        if (isOpen) {
          sidebar.classList.remove('open');
          toggle.classList.remove('active');
          overlay.classList.remove('active');
        } else {
          sidebar.classList.add('open');
          toggle.classList.add('active');
          overlay.classList.add('active');
        }
      });

      // Close sidebar when clicking overlay
      overlay.addEventListener('click', () => {
        sidebar.classList.remove('open');
        toggle.classList.remove('active');
        overlay.classList.remove('active');
      });

      // Close sidebar when clicking on a link (mobile)
      const navLinks = sidebar.querySelectorAll('.nav-links a');
      navLinks.forEach(link => {
        link.addEventListener('click', () => {
          if (window.innerWidth < 1024) {
            sidebar.classList.remove('open');
            toggle.classList.remove('active');
            overlay.classList.remove('active');
          }
        });
      });
    }

    // Mobile floating navigation functionality
    const mobileNavToggle = document.getElementById('mobile-nav-toggle');
    const mobileNavMenu = document.getElementById('mobile-nav-menu');
    const mobileNavOverlay = document.getElementById('mobile-nav-overlay');
    const mobileNavClose = document.getElementById('mobile-nav-close');

    function openMobileNav() {
      mobileNavToggle.classList.add('active');
      mobileNavMenu.classList.add('active');
      mobileNavOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMobileNav() {
      mobileNavToggle.classList.remove('active');
      mobileNavMenu.classList.remove('active');
      mobileNavOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }

    if (mobileNavToggle) {
      mobileNavToggle.addEventListener('click', () => {
        const isOpen = mobileNavToggle.classList.contains('active');
        
        if (isOpen) {
          closeMobileNav();
        } else {
          openMobileNav();
        }
      });
    }

    if (mobileNavClose) {
      mobileNavClose.addEventListener('click', closeMobileNav);
    }

    if (mobileNavOverlay) {
      mobileNavOverlay.addEventListener('click', closeMobileNav);
    }

    // Close mobile nav when clicking on a link
    const mobileNavLinks = document.querySelectorAll('.mobile-nav-links a');
    mobileNavLinks.forEach(link => {
      link.addEventListener('click', closeMobileNav);
    });

    // Handle escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        closeMobileNav();
      }
    });
  });
</script>
