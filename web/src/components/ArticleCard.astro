---
import dayjs from "dayjs";

import { Article } from "@api/article";

export interface Props {
  article: Article;
}

const { article } = Astro.props;

const categoryColors = {
  tech: 'var(--color-blue)',
  photography: 'var(--color-black)',
  parenting: 'var(--color-gray)'
};

const categoryIcons = {
  tech: 'ðŸ’»',
  photography: 'ðŸ“·',
  parenting: 'ðŸ‘¶'
};

function formatDate(date: string) {
  return dayjs(date).format("YYYY-MM-DD");
}
const category = article.attributes.category.data.attributes.name.toLowerCase() as keyof typeof categoryColors;
const date = formatDate(article.attributes.updatedAt || article.attributes.publishedAt);
const readTime = `${article.attributes.readTimeMinute || 0} mins`;
const slug = article.attributes.slug || article.id;
const excerpt = article.attributes.excerpt || "No excerpt available.";
const title = article.attributes.title || "Untitled Article";
---

<article class="article-card">
  <div class="article-header">
    <span class="article-category" style={`color: ${categoryColors[category]}`}>
      {category.toUpperCase()}
    </span>
    <div class="article-meta">
      <time class="article-date">{date}</time>
      <span class="article-read-time">{readTime}</span>
    </div>
  </div>
  
  <h3 class="article-title">
    <a href={`/articles/${slug}`}>{title}</a>
  </h3>
  
  <p class="article-excerpt">{excerpt}</p>
  
  <div class="article-footer">
    <a href={`/articles/${slug}`} class="read-more">
      READ MORE â†’
    </a>
  </div>
</article>

<style>
  .article-card {
    background: var(--color-white);
    border: 4px solid var(--color-black);
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .article-card:hover {
    transform: translate(-4px, -4px);
    box-shadow: 8px 8px 0 var(--color-black);
  }

  .article-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .article-category {
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    border: 2px solid currentColor;
    padding: 0.25rem 0.5rem;
  }

  .article-meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
  }

  .article-date,
  .article-read-time {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    color: var(--color-gray);
    text-transform: uppercase;
  }

  .article-title {
    margin-bottom: 1rem;
    font-size: 1.5rem;
    line-height: 1.1;
    text-transform: none;
  }

  .article-title a {
    border: none;
    color: var(--color-black);
  }

  .article-title a:hover {
    background: transparent;
    color: var(--color-blue);
  }

  .article-excerpt {
    margin-bottom: 2rem;
    color: var(--color-gray);
    line-height: 1.5;
  }

  .article-footer {
    border-top: 2px solid var(--color-black);
    padding-top: 1rem;
  }

  .read-more {
    font-family: var(--font-sans);
    font-weight: 700;
    font-size: 0.9rem;
    letter-spacing: 0.05em;
    border: none;
    color: var(--color-black);
    transition: all 0.2s ease;
  }

  .read-more:hover {
    background: transparent;
    color: var(--color-blue);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .article-card {
      padding: 1.5rem;
    }

    .article-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .article-meta {
      align-items: flex-start;
    }

    .article-title {
      font-size: 1.25rem;
    }
  }
</style>
