---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
  imageUrl: string;
  imageAlt: string;
}

const { title, subtitle, description, imageUrl, imageAlt } = Astro.props;
---

<section class="hero-image">
  <div class="hero-visual">
    <img src={imageUrl} alt={imageAlt} class="hero-img" />
    <div class="hero-overlay">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">{title}</h1>
          {subtitle && <h2 class="hero-subtitle">{subtitle}</h2>}
          {description && <p class="hero-description">{description}</p>}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-image {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero-visual {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  .hero-img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: grayscale(20%) contrast(1.2);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      rgba(0, 102, 255, 0.3) 100%
    );
    display: flex;
    align-items: center;
    z-index: 2;
  }

  .hero-content {
    max-width: 700px;
    color: var(--color-white);
    text-align: left;
  }

  .hero-title {
    color: var(--color-white);
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    position: relative;
    font-size: clamp(2.5rem, 8vw, 5rem);
  }

  .hero-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 4rem;
    height: 4px;
    background: var(--color-blue);
  }

  .hero-subtitle {
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 2rem;
    font-weight: 400;
    text-transform: none;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    font-size: clamp(1.25rem, 4vw, 2rem);
  }

  .hero-description {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0;
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.8);
    line-height: 1.6;
    max-width: 600px;
  }

  /* Desktop adjustments for sidebar layout */
  @media (min-width: 1024px) {
    .hero-content {
      margin-left: 2rem;
    }
  }

  /* Mobile and tablet adjustments */
  @media (max-width: 1023px) {
    .hero-content {
      text-align: center;
      max-width: 100%;
      padding: 0 1rem;
      margin-top: 4rem; /* Account for toggle button */
    }

    .hero-title::after {
      left: 50%;
      transform: translateX(-50%);
    }
  }

  @media (max-width: 480px) {
    .hero-content {
      padding: 0 0.5rem;
      margin-top: 5rem;
    }
  }
</style>