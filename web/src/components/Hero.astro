---
export interface Props {
  title: string;
  subtitle?: string;
  description?: string;
}

const { title, subtitle, description } = Astro.props;
---

<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">{title}</h1>
        {subtitle && <h2 class="hero-subtitle">{subtitle}</h2>}
        {description && <p class="hero-description">{description}</p>}
      </div>
      <div class="hero-visual">
        <div class="geometric-shape shape-1"></div>
        <div class="geometric-shape shape-2"></div>
        <div class="geometric-shape shape-3"></div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    background: var(--color-white);
    border-bottom: 4px solid var(--color-black);
    min-height: 60vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 4rem;
    align-items: center;
    width: 100%;
    position: relative;
    z-index: 2;
  }

  .hero-text {
    max-width: 600px;
  }

  .hero-title {
    margin-bottom: 1rem;
    position: relative;
  }

  .hero-title::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 4rem;
    height: 4px;
    background: var(--color-blue);
  }

  .hero-subtitle {
    color: var(--color-gray);
    margin-bottom: 2rem;
    font-weight: 400;
    text-transform: none;
  }

  .hero-description {
    font-size: 1.1rem;
    max-width: 500px;
    margin-bottom: 0;
  }

  .hero-visual {
    position: relative;
    width: 200px;
    height: 200px;
  }

  .geometric-shape {
    position: absolute;
    background: var(--color-black);
  }

  .shape-1 {
    width: 80px;
    height: 80px;
    top: 0;
    left: 0;
    transform: rotate(45deg);
  }

  .shape-2 {
    width: 60px;
    height: 60px;
    background: var(--color-blue);
    top: 40px;
    right: 20px;
    border-radius: 50%;
  }

  .shape-3 {
    width: 100px;
    height: 20px;
    bottom: 0;
    left: 20px;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 50vh;
      padding: 2rem 0;
    }

    .hero-content {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero-visual {
      width: 150px;
      height: 150px;
      margin: 0 auto;
    }

    .shape-1 {
      width: 60px;
      height: 60px;
    }

    .shape-2 {
      width: 45px;
      height: 45px;
    }

    .shape-3 {
      width: 80px;
      height: 15px;
    }
  }
</style>