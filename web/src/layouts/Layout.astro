---
import { Header } from '@components/Header';
const googleSiteVerification = import.meta.env.PUBLIC_GOOGLE_SITE_VERIFICATION;
export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
}
const {
  title = 'Ivokun',
  author = 'Salahuddin Muhammad Iqbal',
  description = 'Ivokun is a blog about web development, programming, and technology.',
  ogImage = 'https://worldinfreelance.ib-tec.co.jp/img/ogp.jpg',
} = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(ogImage ? ogImage : 'ogp.jpg', Astro.url.origin)
  .href;
---

<style is:global>
@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  a {
    @apply text-blue-600;
  }
  a:hover {
    @apply text-blue-400;
    @apply underline;
    @apply underline-offset-4;
    @apply decoration-2;
  }
}
body {
  font-family: 'Noto Sans', open-sans, sans-serif;
  max-width: 1240px;
  margin: 0 auto;
}
</style>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="canonical" href={canonicalURL} />
    <meta name="generator" content={Astro.generator} />

    <!-- General Meta Tags -->
    <title>Ivokun | {title}</title>
    <meta name="title" content={`Ivokun | ${title}`} />
    <meta name="description" content={description} />
    <meta name="author" content={author} />

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content={`Ivokun | ${title}`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={socialImageURL} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`Ivokun | ${title}`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={socialImageURL} />

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,400;0,500;0,600;0,700;1,400;1,600&display=swap"
      rel="stylesheet"
    />

    {
      // If PUBLIC_GOOGLE_SITE_VERIFICATION is set in the environment variable,
      // include google-site-verification tag in the heading
      // Learn more: https://support.google.com/webmasters/answer/9008080#meta_tag_verification&zippy=%2Chtml-tag
      googleSiteVerification && (
        <meta
          name="google-site-verification"
          content={googleSiteVerification}
        />
      )
    }
  </head>
  <body>
    <Header />
    <div class="mt-[6em]">
      <aside class="hidden lg:block fixed p-4 bg-[#f5f5f5] rounded-xl h-[580px] min-w-[17rem]">
        <nav
          aria-label="Main"
          data-orientation="vertical"
          dir="ltr"
        >
          <ul
            data-orientation="horizontal"
            class="group flex flex-col list-none items-start"
            dir="ltr"
          >
            <li class="hover:bg-[#ebebeb] rounded-xl">
              <a href="/" data-radix-collection-item="" rel="ugc" class="text-black">
                <div class="flex flex-row py-4 px-6 gap-4">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    class="w-6 h-6"
                  >
                    <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                    <polyline points="9 22 9 12 15 12 15 22"></polyline>
                  </svg>
                  Home
                </div>
              </a>
            </li>
            <li class="hover:bg-[#ebebeb] rounded-xl">
              <a href="/about-me" data-radix-collection-item="" rel="ugc" class="text-black">
                <div class="flex flex-row py-4 px-6 gap-4">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="24"
                  height="24"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="w-6 h-6"
                >
                  <path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                About Me
                  </div>
              </a>
            </li>
          </ul>
        </nav>
      </aside>
    <main class="lg:pl-[19.5rem]">
      <slot />
        </main>
    </div>
  </body>
</html>
