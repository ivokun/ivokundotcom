---
export interface Props {
  title?: string;
  author?: string;
  description?: string;
  ogImage?: string;
}
const {
  title = "Ivokun",
  author = "Salahuddin Muhammad Iqbal",
  description = "Ivokun is a blog about web development, programming, and technology.",
  ogImage = "https://worldinfreelance.ib-tec.co.jp/img/ogp.jpg",
} = Astro.props;

---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;700;800&family=Space+Grotesk:wght@400;700;900&display=swap" rel="stylesheet">
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;

  :root {
    --color-black: #000000;
    --color-white: #ffffff;
    --color-blue: #0066ff;
    --color-gray: #888888;
    --font-mono: 'JetBrains Mono', monospace;
    --font-sans: 'Space Grotesk', sans-serif;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    height: 100%;
    background: var(--color-white);
    color: var(--color-black);
    font-family: var(--font-sans);
    line-height: 1.2;
    overflow-x: hidden;
  }

  body {
    font-size: 16px;
    font-weight: 400;
    transition: margin-left 0.3s ease;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: var(--font-sans);
    font-weight: 900;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    line-height: 0.9;
  }

  h1 {
    font-size: clamp(2rem, 8vw, 4rem);
  }

  h2 {
    font-size: clamp(1.5rem, 6vw, 3rem);
  }

  h3 {
    font-size: clamp(1.25rem, 4vw, 2rem);
  }

  p {
    font-family: var(--font-mono);
    font-size: clamp(0.9rem, 2vw, 1rem);
    line-height: 1.4;
    margin-bottom: 1rem;
  }

  a {
    color: var(--color-black);
    text-decoration: none;
    border-bottom: 2px solid var(--color-blue);
    transition: all 0.2s ease;
  }

  a:hover {
    background: var(--color-blue);
    color: var(--color-white);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .brutalist-button {
    display: inline-block;
    background: var(--color-black);
    color: var(--color-white);
    padding: 1rem 2rem;
    font-family: var(--font-sans);
    font-weight: 700;
    text-transform: uppercase;
    border: 3px solid var(--color-black);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 1rem;
    letter-spacing: 0.05em;
  }

  .brutalist-button:hover {
    background: var(--color-white);
    color: var(--color-black);
    border-color: var(--color-blue);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-blue);
  }

  .brutalist-input {
    background: var(--color-white);
    border: 3px solid var(--color-black);
    padding: 1rem;
    font-family: var(--font-mono);
    font-size: 1rem;
    width: 100%;
    margin-bottom: 1rem;
  }

  .brutalist-input:focus {
    outline: none;
    border-color: var(--color-blue);
    box-shadow: 0 0 0 3px var(--color-blue);
  }

  /* Desktop layout with sidebar */
  @media (min-width: 1024px) {
    body {
      margin-left: 280px;
    }
  }

  /* Mobile and tablet layout */
  @media (max-width: 1023px) {
    body {
      margin-left: 0;
    }
    
    .container {
      padding: 0 0.5rem;
    }
  }
</style>
