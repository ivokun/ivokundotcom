---
import NewLayout from '@layouts/NewLayout.astro';
import Navigation from '@components/Navigation.astro';
import { fetchGallery, Gallery, convertToGalleryItems, GalleryItem } from '@api/gallery';

export async function getStaticPaths() {
  const galleries = await fetchGallery<Gallery[]>({
    endpoint: "galleries?populate=*",
    wrappedByKey: "data",
  });

  console.log(`Fetched ${galleries.length} galleries from API`)
  
  if (!galleries || galleries.length === 0) {
    return [];
  }
  
  // Convert the API data to gallery items
  const galleryItems = convertToGalleryItems(galleries);
  
  // Create a path for each gallery item
  return galleryItems.map(item => ({
    params: { slug: item.slug },
    props: { 
      currentItem: item,
      allItems: galleryItems
    }
  }));
}

const { slug } = Astro.params;
const { currentItem, allItems } = Astro.props;

// Find the current index
const currentIndex = allItems.findIndex(item => item.slug === slug);

// Get previous and next items (with wraparound)
const prevItem = currentIndex > 0 ? allItems[currentIndex - 1] : allItems[allItems.length - 1];
const nextItem = currentIndex < allItems.length - 1 ? allItems[currentIndex + 1] : allItems[0];
console.log(nextItem, prevItem, currentItem);
---

<NewLayout title={`${currentItem.title} - IVOKUN BLOG`}>
  <Navigation />
  
  <main class="photo-viewer">
    <div class="photo-container">
      <div class="photo-header">
        <a href="/gallery" class="back-link">
          ‚Üê BACK TO GALLERY
        </a>
        <div class="photo-counter">
          {currentIndex + 1} / {allItems.length}
        </div>
      </div>

      <div class="photo-main">
        <div class="photo-content-centered">
          <div class="photo-image-container">
            <div class="photo-image" id="photoContainer">
              <button class="lightbox-trigger" aria-label="Open fullscreen view" id="lightboxTrigger">
                <picture>
                  <source srcset={currentItem.formats.large} media="(min-width: 1200px)" />
                  <source srcset={currentItem.formats.medium} media="(min-width: 768px)" />
                  <source srcset={currentItem.formats.small} media="(max-width: 767px)" />
                  <img 
                    src={currentItem.formats.large} 
                    alt={currentItem.title} 
                    id="mainImage"
                    loading="eager"
                  />
                </picture>
                <div class="zoom-indicator">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <circle cx="11" cy="11" r="8"></circle>
                    <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                    <line x1="11" y1="8" x2="11" y2="14"></line>
                    <line x1="8" y1="11" x2="14" y2="11"></line>
                  </svg>
                </div>
              </button>
            </div>
            
            <!-- Lightbox Modal -->
            <div class="lightbox" id="lightbox">
              <div class="lightbox-content">
                <img src={currentItem.imageUrl} alt={currentItem.title} id="lightboxImage" />
                <button class="lightbox-close" id="lightboxClose" aria-label="Close fullscreen view">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                  </svg>
                </button>
              </div>
            </div>
            
            <div class="photo-caption">
              <div class="photo-meta">
                <span class="photo-category" data-category={currentItem.category}>
                  {currentItem.category.toUpperCase()}
                </span>
              </div>
              <h1 class="photo-title" id="photoTitle">{currentItem.title}</h1>
              {currentItem.description && (
                <p class="photo-description" id="photoDescription">{currentItem.description}</p>
              )}
            </div>
          </div>
        </div>
      </div>

      <div class="photo-navigation">
        {prevItem.slug !== currentItem.slug && 
        prevItem.slug !== nextItem.slug &&
          <a href={`/gallery/${prevItem.slug}`} class="nav-link nav-link-prev" id="prevLink">
            <div class="nav-thumb">
              <img src={prevItem.formats.thumbnail} alt={prevItem.title} loading="lazy" />
            </div>
            <div class="nav-info">
              <span class="nav-label">PREVIOUS</span>
              <span class="nav-title">{prevItem.title}</span>
            </div>
          </a>
        }

        {nextItem.slug !== currentItem.slug && 
          <a href={`/gallery/${nextItem.slug}`} class="nav-link nav-link-next" id="nextLink">
            <div class="nav-info">
              <span class="nav-label">NEXT</span>
              <span class="nav-title">{nextItem.title}</span>
            </div>
            <div class="nav-thumb">
              <img src={nextItem.formats.thumbnail} alt={nextItem.title} loading="lazy" />
            </div>
          </a>
        }
      </div>
    </div>
  </main>
</NewLayout>

<style>
  .photo-viewer {
    min-height: 100vh;
    padding: 2rem 0;
  }

  .photo-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .photo-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 4px solid var(--color-black);
  }

  .back-link {
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-black);
    border: 3px solid var(--color-black);
    padding: 0.75rem 1.5rem;
    background: var(--color-white);
    transition: all 0.2s ease;
  }

  .back-link:hover {
    background: var(--color-black);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-blue);
  }

  .photo-counter {
    font-family: var(--font-mono);
    font-size: 1rem;
    font-weight: 700;
    color: var(--color-gray);
    text-transform: uppercase;
  }

  .photo-main {
    margin-bottom: 3rem;
  }
  
  .photo-content-centered {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  
  .photo-image-container {
    max-width: 900px;
    width: 100%;
    margin: 0 auto;
  }

  .photo-image {
    border: 4px solid var(--color-black);
    overflow: hidden;
    background: var(--color-white);
    margin-bottom: 1.5rem;
    box-shadow: 8px 8px 0 var(--color-blue);
    position: relative;
  }

  .photo-image img {
    width: 100%;
    height: auto;
    display: block;
    max-height: 70vh;
    object-fit: contain;
  }
  
  /* Lightbox Trigger */
  .lightbox-trigger {
    width: 100%;
    height: 100%;
    padding: 0;
    margin: 0;
    border: none;
    background: transparent;
    cursor: zoom-in;
    position: relative;
    display: block;
  }
  
  .zoom-indicator {
    position: absolute;
    bottom: 1rem;
    right: 1rem;
    background: rgba(0, 0, 0, 0.6);
    color: white;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }
  
  .lightbox-trigger:hover .zoom-indicator {
    opacity: 1;
  }
  
  /* Lightbox Modal */
  .lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    display: none;
    z-index: 9999;
    justify-content: center;
    align-items: center;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .lightbox.active {
    display: flex;
    opacity: 1;
  }
  
  .lightbox-content {
    position: relative;
    max-width: 90%;
    max-height: 90%;
  }
  
  .lightbox-content img {
    max-width: 100%;
    max-height: 90vh;
    object-fit: contain;
    display: block;
    margin: 0 auto;
  }
  
  .lightbox-close {
    position: absolute;
    top: -40px;
    right: 0;
    background: transparent;
    border: none;
    color: white;
    font-size: 2rem;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 10000;
    transition: transform 0.2s ease;
  }
  
  .lightbox-close:hover {
    transform: scale(1.2);
  }

  .photo-caption {
    padding: 1.5rem 2rem;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    text-align: center;
  }

  .photo-meta {
    margin-bottom: 1rem;
  }

  .photo-category {
    font-family: var(--font-sans);
    font-weight: 900;
    font-size: 0.8rem;
    letter-spacing: 0.1em;
    border: 2px solid currentColor;
    padding: 0.25rem 0.5rem;
    text-transform: uppercase;
  }

  .photo-category[data-category="tech"] {
    color: var(--color-blue);
  }

  .photo-category[data-category="photography"] {
    color: var(--color-black);
  }

  .photo-title {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    text-transform: none;
    line-height: 1.1;
  }

  .photo-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-gray);
    margin-bottom: 0;
  }

  .photo-navigation {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    border-top: 4px solid var(--color-black);
    padding-top: 2rem;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1.5rem;
    background: var(--color-white);
    border: 4px solid var(--color-black);
    transition: all 0.2s ease;
    text-decoration: none;
    color: var(--color-black);
  }

  .nav-link:hover {
    background: var(--color-blue);
    color: var(--color-white);
    transform: translate(-2px, -2px);
    box-shadow: 4px 4px 0 var(--color-black);
  }

  .nav-link-next {
    justify-content: flex-end;
  }

  .nav-thumb {
    width: 80px;
    height: 80px;
    border: 3px solid var(--color-black);
    overflow: hidden;
    flex-shrink: 0;
  }

  .nav-thumb img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .nav-info {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .nav-link-next .nav-info {
    text-align: right;
  }

  .nav-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--color-gray);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nav-link:hover .nav-label {
    color: var(--color-white);
  }

  .nav-title {
    font-family: var(--font-sans);
    font-weight: 700;
    font-size: 1rem;
    text-transform: uppercase;
  }

  /* Mobile Styles */
  @media (max-width: 1024px) {
    .photo-image-container {
      max-width: 100%;
    }
    
    .photo-image img {
      max-height: 50vh;
    }
    
    .photo-caption {
      padding: 1.25rem;
    }
  }

  @media (max-width: 768px) {
    .photo-viewer {
      padding: 1rem 0;
    }

    .photo-header {
      flex-direction: column;
      gap: 1rem;
      align-items: flex-start;
    }

    .back-link {
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
    }
    
    .photo-image {
      box-shadow: 6px 6px 0 var(--color-blue);
      margin-bottom: 1rem;
    }

    .photo-caption {
      padding: 1rem;
    }

    .photo-title {
      font-size: 1.5rem;
    }

    .photo-navigation {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .nav-link {
      padding: 1rem;
    }

    .nav-thumb {
      width: 60px;
      height: 60px;
    }

    .nav-title {
      font-size: 0.9rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const prevBtn = document.getElementById('prevBtn');
    const nextBtn = document.getElementById('nextBtn');
    const prevLink = document.getElementById('prevLink');
    const nextLink = document.getElementById('nextLink');
    
    // Lightbox Elements
    const lightboxTrigger = document.getElementById('lightboxTrigger');
    const lightbox = document.getElementById('lightbox');
    const lightboxClose = document.getElementById('lightboxClose');
    const lightboxImage = document.getElementById('lightboxImage');
    const mainImage = document.getElementById('mainImage');
    
    // Lightbox functionality
    if (lightboxTrigger && lightbox && lightboxClose && lightboxImage && mainImage) {
      // Use the original/highest quality image for the lightbox
      lightboxImage.src = mainImage.src;
      
      // Open lightbox
      lightboxTrigger.addEventListener('click', () => {
        lightbox.classList.add('active');
        document.body.style.overflow = 'hidden'; // Prevent scrolling
      });
      
      // Close lightbox
      lightboxClose.addEventListener('click', () => {
        lightbox.classList.remove('active');
        document.body.style.overflow = ''; // Restore scrolling
      });
      
      // Close lightbox when clicking outside the image
      lightbox.addEventListener('click', (e) => {
        if (e.target === lightbox) {
          lightbox.classList.remove('active');
          document.body.style.overflow = '';
        }
      });
    }

    // Handle keyboard navigation
    document.addEventListener('keydown', (e) => {
      // If lightbox is active
      if (lightbox && lightbox.classList.contains('active')) {
        if (e.key === 'Escape') {
          lightbox.classList.remove('active');
          document.body.style.overflow = '';
        }
        return; // Don't handle other keys when lightbox is open
      }
      
      // Gallery navigation
      if (e.key === 'ArrowLeft' && prevLink) {
        window.location.href = prevLink.href;
      } else if (e.key === 'ArrowRight' && nextLink) {
        window.location.href = nextLink.href;
      } else if (e.key === 'Escape') {
        window.location.href = '/gallery';
      }
    });

    // Handle button clicks
    if (prevBtn && prevLink) {
      prevBtn.addEventListener('click', () => {
        window.location.href = prevLink.href;
      });
    }

    if (nextBtn && nextLink) {
      nextBtn.addEventListener('click', () => {
        window.location.href = nextLink.href;
      });
    }
  });
</script>
